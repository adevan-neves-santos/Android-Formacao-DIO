<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_buttons"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:backgroundTint="@color/design_default_color_primary"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="Buttons"
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_text_fields"
        android:backgroundTint="@color/design_default_color_primary"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:padding="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="TextFiels"
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_top_app_bar"
        android:backgroundTint="@color/design_default_color_primary"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:padding="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="Top App Bar"
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_bottom_app_bar"
        android:backgroundTint="@color/design_default_color_primary"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:padding="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="Bottom App Bar"
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_snackbars"
        android:backgroundTint="@color/design_default_color_primary"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:padding="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="Snackbars"
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_bottom_navigation"
        android:backgroundTint="@color/design_default_color_primary"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:padding="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="TextFiels"
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>